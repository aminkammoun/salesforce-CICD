<project name="Salesforce" default="deploy" basedir="."
  xmlns:sf="antlib:com.salesforce">
  <taskdef resource="com/salesforce/antlib.xml" classpath="./lib/ant-salesforce.jar" />
  <property file="build.properties" />

  <property environment="env" />

  <!--   <! — Deploy the unpackaged set of metadata retrieved with retrieveUnpackaged and run tests in
  this organization’s namespace only →
 -->
  <target name="deployall">

    <sf:deploy username="${sf.username}" password="${sf.password}" serverurl="${sf.serverurl}"
      testlevel="NoTestRun" logtype="Detail" deployRoot="force-app" />

  </target>

</project>